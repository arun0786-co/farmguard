# DATABASE CONNECTION
# Replace with your PostgreSQL or MySQL connection string
# For Vercel deployments, use a database service like PlanetScale, Neon, or Supabase
DATABASE_URL="postgresql://user:password@host:port/database"

# AUTHENTICATION
# Generate a secret for NextAuth.js (run `openssl rand -base64 32` to generate)
NEXTAUTH_SECRET="your-nextauth-secret"
# Set to your production URL when deployed (e.g. https://farmguard2.vercel.app)
NEXTAUTH_URL="http://localhost:3000"

# PUBLIC URLS
# URL for API endpoints (automatically set by Vercel in production)
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
# This will be set automatically by Vercel in production
NEXT_PUBLIC_VERCEL_URL="${VERCEL_URL}"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Image Configuration
NEXT_PUBLIC_IMAGE_DOMAIN=images.unsplash.com

# STORAGE (for images, if needed)
# If using cloud storage like AWS S3, Cloudinary, etc.
# CLOUD_STORAGE_KEY=""
# CLOUD_STORAGE_SECRET=""
# CLOUD_STORAGE_BUCKET=""

# ADDITIONAL SERVICES (if needed)
# For payment processing
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""

# DEPLOYMENT ENV
# Automatically set by Vercel
# NODE_ENV="development"

# Optional: Analytics or other third-party services
# ANALYTICS_ID= 